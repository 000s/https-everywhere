<ruleset name="Pidgin">

	<target host="pidg.in" />
	<target host="www.pidg.in" />
	<target host="pidgin.im" />
	<target host="*.pidgin.im" />


	<securecookie host="^developer\.pidgin\.im$" name=".*" />


	<rule from="^http://(www\.)?pidg\.in/"
		to="https://$1pidg.in/" />

	<rule from="^http://((?:developer|hg|planet|rock|rpm|stats|www)\.)?pidgin\.im/"
		to="https://$1pidgin.im/" />

</ruleset>
