<ruleset name="centbrowser">

	<target host="centbrowser" />
	<!--target host="static.centbrowser.com" /-->
	<target host="www.centbrowser.com" />

	<rule from="^http:" to="https:" />
	
	<!--	Mixed content issues on https://www.centbrowser.com/forum/ -->
	
	<rule from="^http://(www\.)?centbrowser\.com/forum/(cache|images|javascript|task\.php)/(\w+)?"
		to="https://$1centbrowser.com/forum/$2/$3" />
	<exclusion pattern="^http://(www\.)?centbrowser\.com/forum/$" />
	<exclusion pattern="^http://(www\.)?centbrowser\.com/forum/\w+\.php(\w+)?" />
	
</ruleset>
