<ruleset name="centbrowser">

	<target host="centbrowser.com" />
	<!--target host="static.centbrowser.com" /-->
	<target host="www.centbrowser.com" />
	
	<!--	Mixed content issues on https://www.centbrowser.com/forum/ -->
	
	<rule from="^http://(www\.)?centbrowser\.com/forum/(cache|images|javascript|task\.php)/(\w+)?"
		to="https://$1centbrowser.com/forum/$2/$3" />
		<test url="http://www.centbrowser.com/forum/cache/themes/theme1/css3.css/" />
		<test url="http://www.centbrowser.com/forum/images/logo.png/" />
		<test url="http://www.centbrowser.com/forum/jscripts/general.js?ver=1804/" />
		<test url="http://centbrowser.com/forum/jscripts/general.js?ver=1804/" />
		<test url="http://centbrowser.com/forum/images/logo.png/" />
		
	<exclusion pattern="^http://(www\.)?centbrowser\.com/forum/$" />
		<test url="http://centbrowser.com/forum/" />
		<test url="http://www.centbrowser.com/forum/" />
		
	<exclusion pattern="^http://(www\.)?centbrowser\.com/forum/\w+\.php(\w+)?" />
		<test url="http://www.centbrowser.com/forum/portal.php/" />
		<test url="http://www.centbrowser.com/forum/search.php/" />
		<test url="http://www.centbrowser.com/forum/memberlist.php/" />
		<test url="http://www.centbrowser.com/forum/calendar.php/" />
		<test url="http://www.centbrowser.com/forum/misc.php?action=help" />

	<rule from="^http:" to="https:" />
	
</ruleset>
