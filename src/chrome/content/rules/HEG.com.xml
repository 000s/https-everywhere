<!--
	Problematic hosts in *heg.com:

		- dev *

	* Mismatched


	Mixed content:

		- css from $self *

		- Images, from:

			- designova.net ²
			- dev.heg.com *
			- www.heg.com *

	* Secured by us
	² Not secured by us <= expired

-->
<ruleset name="HEG.com" platform="mixedcontent">

	<!--	Direct rewrites:
				-->
	<target host="heg.com" />
	<target host="www.heg.com" />

	<!--	Complications:
				-->
	<target host="dev.heg.com" />


	<rule from="^http://dev\.heg\.com/"
		to="https://www.heg.com/" />

	<rule from="^http:"
		to="https:" />

</ruleset>
