<!--
	Other BitTorrent rulesets:

		- uTorrent.xml

-->
<ruleset name="BitTorrent">

	<target host="bittorrent.com" />
	<target host="*.bittorrent.com" />


	<securecookie host="^(.*\.)?bittorrent\.com$" name=".*" />


	<!--	Observed subdomains:

			- blog
			- forum
			- torque
				-->
	<rule from="^http://(\w+\.)?bittorrent\.com/"
		to="https://$1bittorrent.com/" />

</ruleset>
