<ruleset name="TRON-DELTA.ORG" default_on="Works, except external RSS" platform="firefox">
	<target host="tron-delta.org" />
	<target host="*.tron-delta.org" />

	<exclusion pattern="^http://tron-delta\.org/administrator/"/>
	<rule from="^http://(www\.)?tron-delta\.org/"    to="https://tron-delta.org/"/>
	<rule from="^http://([^/:@]*)\.tron-delta\.org/" to="https://$1.tron-delta.org/"/>

	<securecookie host="^tron-delta\.org$" name=".*" />
</ruleset>
