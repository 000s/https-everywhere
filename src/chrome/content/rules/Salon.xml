<!--
	CDN buckets:

		- media.salon.com.edgesuite.net
			- media.salon.com

		- www.salon.com.edgesuite.net
			- images.salon.com
			- www.salon.com

-->
<ruleset name="Salon">

	<target host="salon.com" />
	<target host="*.salon.com" />


	<rule from="^https?://(?:www\.)?salon\.com/"
		to="https://www.salon.com/" />

	<rule from="^http://(images|media)\.salon\.com/"
		to="https://$1.salon.com/" />

</ruleset>
