<!-- ibm have lots of resources, besides software, also developerworks and 
redbooks. -->
<ruleset name="IBM" default_off="Support site redirect loops">
	<target host="ibm.com" />
	<target host="www.ibm.com" />
	<target host="www.redbooks.ibm.com" />
	<rule from="^http://ibm\.com/" to="https://www.ibm.com/"/>
	<rule from="^http://www\.ibm\.com/" to="https://www.ibm.com/"/>
	<rule from="^http://www\.redbooks\.ibm\.com/" to="https://www.redbooks.ibm.com/"/>
</ruleset>

