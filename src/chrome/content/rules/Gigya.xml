<!--
	CDN buckets:

		- cdn.gigya.com.edgesuite.net


	Nonfunctional subdomains:

		- blog
		- developers (cert: *.mindtouch.us; at least some pages & files redirect to http)
		- info	(cert: *.marketo.com; / redirects to app-f.marketo.com; other paths 404)

-->
<ruleset name="Gigya (partial)">

	<target host="gigya.com" />
	<target host="*.gigya.com" />
		<exclusion pattern="^http://(?:www\.)?gigya\.com/(?:company/?|privacy-board/|media-coverage/|press-room/|careers/|social-media-resources/|contact-us/)$" />
		<exclusion pattern="^http://info\." />

	<rule from="^http://((?:counters|origin|www)\.)?gigya\.com/"
		to="https://$1gigya.com/" />

	<rule from="^https://(www\.)?gigya\.com/(company/?|privacy-board/|media-coverage/|press-room/|careers/|social-media-resources/|contact-us/)$"
		to="http://$1gigya.com/$2" downgrade="1" />

	<!--	Akamai	-->
	<rule from="^https?://cdn\.gigya\.com/"
		to="https://origin.gigya.com/" />

</ruleset>
