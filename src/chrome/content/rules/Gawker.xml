<!--
	Other Gawker Media rulesets:

		- Jalopnik.xml


	nonfunctional:

		- fonts.gawker.com
		- hyperion.gawker.com
		- ganja.gawkerassets.com	(reset)
		- img.gawkerassets.com		(ditto)

-->
<ruleset name="Gawker (partial)">

	<target host="api.gawker.com"/>
	<target host="login.gawker.com"/>

	<securecookie host="^login\.gawker\.com$" name=".*"/>

	<rule from="^http://(api|login)\.gawker\.com/"
		to="https://$1.gawker.com/"/>

</ruleset>
