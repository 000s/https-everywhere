<!--	breaks images ... if we could rewrite from https to http, that could be mitigated!
-->
<ruleset name="Secret Maryo Chronicles (partial)" default_off="mismatch, self-signed, breaks images">

	<target host="secretmaryo.org"/>
	<target host="www.secretmaryo.org"/>
		<exclusion pattern="^http://(?:www\.)?secretmaryo\.org/(images/|[\w_]+\.png$)"/>

	<rule from="^http://(?:www\.)?secretmaryo\.org/"
		to="https://secretmaryo.org/"/>

</ruleset>
