<!--
	For rules causing false/broken MCB, see Model_View_Culture.com-falsemixed.xml.


	CN: *.a.ssl.fastly.net


	Mixed content:

		- css from fonts.googlapis.com *

		- Images from images *

	* Secured by us

-->
<ruleset name="Model View Culture.com (partial)" platform="mixedcontent" default_off="mismatched">

	<target host="modelviewculture.com" />
	<target host="*.modelviewculture.com" />
		<!--
			Avoid broken MCB:
						-->
		<exclusion pattern="^http://(?:www\.)?modelviewculture.com/+(?!favicon\.ico|wp-content/|wp-includes/)" />


	<rule from="^http://(images\.|www\.)?modelviewculture\.com/"
		to="https://$1modelviewculture.com/" />

</ruleset>
