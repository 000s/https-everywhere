<ruleset name="Heroku">
  <target host="heroku.com" />
  <target host="*.heroku.com" />
  <target host="*.herokuapp.com" />


	<!--	Avoiding cross-domain cookies.
						-->
	<securecookie host="^[\w\-]+\.herokuapp\.com$" name=".*" />


  <rule from="^http://heroku\.com/" to="https://heroku.com/"/>
  <rule from="^http://([^/:@\.]+)\.heroku\.com/" to="https://$1.heroku.com/"/>
  <rule from="^http://([^/:@\.]+)\.herokuapp\.com/" to="https://$1.herokuapp.com/"/>
</ruleset>
