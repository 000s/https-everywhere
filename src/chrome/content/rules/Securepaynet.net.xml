<ruleset name="Securepaynet.net">
	<target host="securepaynet.net" />
	<target host="cart.securepaynet.net" />
	<target host="dcc.securepaynet.net" />
	<target host="idp.securepaynet.net" />
	<target host="mya.securepaynet.net" />
	<target host="who.securepaynet.net" />
	<target host="www.securepaynet.net" />

	<securecookie host="^((cart|dcc|idp|mya|who|www)?\.)?securepaynet\.net$" name=".+" />

	<rule from="^https?://securepaynet\.net/" to="https://www.securepaynet.net/" />
	<rule from="^http://(cart|dcc|idp|mya|who|www)\.securepaynet\.net/" to="https://$1.securepaynet.net/" />
</ruleset>