<ruleset name="Popular Mechanics (partial)">

	<!--	Cert: subscribe.hearstmags.com	-->
	<target host="popularmechanics.com" />
	<!--	Akamai	-->
	<target host="*.popularmechanics.com" />
		<!--
			Avoid user-visible paths:
							-->
		<exclusion pattern="^http://(?:www\.)?popularmechanics\.com/(?!cm/|favicon\.ico)" />
		<!--
			Paths are given relative to /, thereby breaking images:
										-->
		<exclusion pattern="^http://(?:www\.)?popularmechanics\.com/cm/popularmechanics/styles/(?:comments|flipbook3|global|promo_player)\.css" />


	<rule from="^http://(?:www\.)?popularmechanics\.com/"
		to="https://a248.e.akamai.net/f/1303/5377/4m/www.popularmechanics.com/" />

</ruleset>
