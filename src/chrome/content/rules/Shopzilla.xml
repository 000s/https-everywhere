<ruleset name="Shopzilla (partial)">

	<target host="bizrate.com"/>
	<target host="*.bizrate.com"/>
	<target host="shopzilla.com"/>
	<target host="*.shopzilla.com"/>

	<securecookie host="^\.(bizrate|shopzilla)\.com$" name=".*"/>

	<rule from="^http://bizrate\.com/"
		to="https://www.bizrate.com/"/>

	<rule from="^http://((images|medals|www)\.)?bizrate\.com/"
		to="https://$1bizrate.com/"/>

	<rule from="^http://shopzilla\.com/"
		to="https://www.shopzilla.com/"/>

	<rule from="^http://(merchant\.|www\.)?shopzilla\.com/"
		to="https://$1shopzilla.com/"/>

</ruleset>
