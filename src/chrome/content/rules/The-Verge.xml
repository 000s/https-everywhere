<!--
	Other Vox Media rulesets:

		- SB-Nation.xml


-->
<ruleset name="The Verge">

	<target host="theverge.com" />
	<!--	* for cross-domain cookie.	-->
	<target host="*.theverge.com" />


	<!--	Set by beacons.	-->
	<securecookie host="^(www)?\.theverge\.com$" name=".*" />


	<rule from="^http://(www\.)?theverge\.com/"
		to="https://$1theverge.com/" />

</ruleset>
