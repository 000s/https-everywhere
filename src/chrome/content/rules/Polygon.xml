<!--
	Problematic subdomains:

		- ^	(mismatched, CN: *.theverge.com)
		- www	(mismatched, CN: *.sbnation.com)

-->
<ruleset name="Polygon" default_off="mismatched">

	<target host="polygon.com" />
	<target host="www.polygon.com" />


	<rule from="^http://(?:www\.)?polygon\.com/"
		to="https://www.polygon.com/" />

</ruleset>