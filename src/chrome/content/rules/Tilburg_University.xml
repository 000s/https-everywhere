	<rule from="^http://(o?sso|oudesite|stuwww)\.uvt\.nl/"
		to="https://$1.uvt.nl/" />

	<rule from="^http://osso\.uvt\.nl:4443/"
		to="https://osso.uvt.nl:4443/" />

</ruleset>