<ruleset name="OzBargain">
<!--
	OzBargain, OzVoucher, ChoiceCheapies are all by the same company
-->
  <target host="ozbargain.com.au" />
  <target host="www.ozbargain.com.au" />
  <target host="ozb.me" />
  <target host="*.ozb.me" />
  <target host="ozvoucher.com.au" />
  <target host="www.ozvoucher.com.au" />
  <target host="choicecheapies.co.nz" />
  <target host="www.choicecheapies.co.nz" />

  <rule from="^http://(?:www\.)?ozbargain\.com\.au/"
  		  to="https://www.ozbargain.com.au/"/>
  <rule from="^http://(?:www\.)?ozvoucher\.com\.au/"
  		  to="https://www.ozvoucher.com.au/"/>
  <rule from="^http://(?:www\.)?choicecheapies\.co\.nz/"
  		  to="https://www.choicecheapies.co.nz/"/>

  <rule from="^http://cdn\.ozb\.me/"
  		  to="https://cdn.ozb.me/" />

  <rule from="^http://files\.ozbargain\.com\.au/"
  		  to="https://files.ozbargain.com.au/"/>
  <rule from="^http://files\.choicecheapies\.co\.nz/"
  		  to="https://files.choicecheapies.co.nz/"/>
</ruleset>
