<!--
	Fully covered subdomains:

		- listes
		- sourcesup	(â†’ sourcesup.renater.fr)
		- www


	^cru.fr does not exist

-->
<ruleset name="cru.fr">

	<target host="*.cru.fr" />


	<securecookie host="^www\.cru\.fr$" name=".+" />


	<rule from="^http://(listes|www)\.cru\.fr/"
		to="https://$1.cru.fr/" />

	<!--	Works over https, but redirects
		like so over http:
					-->
	<rule from="^http://sourcesup\.cru\.fr/"
		to="https://sourcesup.renater.fr/" />

</ruleset>