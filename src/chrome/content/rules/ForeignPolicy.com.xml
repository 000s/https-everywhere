<ruleset name="ForeignPolicy.com" default_off="Certificate mismatch">

	<target host="foreignpolicy.com" />
	<target host="jobs.foreignpolicy.com" />
	<target host="www.foreignpolicy.com" />

	<rule from="^http://(www\.)?foreignpolicy\.com/"
		to="https://www.foreignpolicy.com/" />

	<rule from="^http://jobs\.foreignpolicy\.com/"
		to="https://jobs.foreignpolicy.com/" />

</ruleset>
