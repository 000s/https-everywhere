<ruleset name="BofA (buggy)" default_off="breaks some URLs">

	<target host="bankofamerica.com" />
	<target host="webmedia.bankofamerica.com" />
	<target host="www.bankofamerica.com" />


	<rule from="^http://(?:www\.)?bankofamerica\.com/"
		to="https://www.bankofamerica.com/" />

	<rule from="^http://webmedia\.bankofamerica\.com/"
		to="https://webmedia.bankofamerica.com/" />

</ruleset>
