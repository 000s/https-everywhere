<ruleset name="wunderground.com (buggy)" default_off="breaks severe weather maps">
	<target host="wunderground.com" />
	<target host="www.wunderground.com" />
	<exclusion pattern="^http://wunderground\.com/radar/"/>
	<exclusion pattern="^http://www\.wunderground\.com/radar/"/>
	
	<rule from="^http://wunderground\.com/" to="https://www.wunderground.com/"/>
	<rule from="^http://www\.wunderground\.com/" to="https://www.wunderground.com/"/>
</ruleset>
