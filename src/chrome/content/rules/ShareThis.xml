<!--
	Nonfunctional subdomains:

		- forums	(times out)
		- help

-->
<ruleset name="ShareThis (partial)">

	<target host="sharethis.com" />
	<target host="*.sharethis.com" />


	<rule from="^http://(www\.)?sharethis\.com/"
		to="https://$1sharethis.com/" />

	<!--	cdn: Akamai	-->
	<rule from="^http://cdn\.sharethis\.com/"
		to="https://sharethis.com/" />

	<rule from="^http://ws?\.sharethis\.com/" to="https://ws.sharethis.com/" />

</ruleset>
