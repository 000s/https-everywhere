<ruleset name="JustGiving">
	<target host="justgiving.com" />
	<target host="*.justgiving.com" />

	<securecookie host="^(apimanagement|www)?\.justgiving\.com$" name=".*"/>

	<rule from="^(http://(www\.)?|https://)justgiving\.com/" to="https://www.justgiving.com/" />
	<rule from="^http://(apimanagement|secure)\.justgiving\.com/" to="https://$1.justgiving.com/" />
</ruleset>
