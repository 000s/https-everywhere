<ruleset name="BBC">

  <target host="bbc.co.uk" />
  <target host="sa.bbc.co.uk" />
  <target host="static.bbc.co.uk" />
  <target host="www.bbc.co.uk" />

  <rule from="^http://(sa|static)\.bbc\.co\.uk/"
          to="https://$1.bbc.co.uk/" />

  <rule from="^http://(www\.)?bbc\.co\.uk/favicon\.ico$"
          to="https://www.bbc.co.uk/favicon.ico" />

</ruleset>
