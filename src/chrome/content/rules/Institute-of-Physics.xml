	<securecookie host="^\.?iopscience\.iop\.org$" name=".+" />


	<rule from="^http://(?:www\.)?iop\.org/"
		to="https://www.iop.org/" />

	<rule from="^http://(images|iopscience)\.iop\.org/"
		to="https://$1.iop.org/" />

</ruleset>
