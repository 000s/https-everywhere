<ruleset name="IoP.org (partial)">

	<target host="iop.org" />
	<target host="*.iop.org" />


	<!--	Not secured by server:
					-->
	<!--securecookie host="^\.iop\.org$" name="^IOP_session_live$" /-->
	<!--securecookie host="^iopscience\.iop\.org$" name="^JSESSIONID$" /-->
