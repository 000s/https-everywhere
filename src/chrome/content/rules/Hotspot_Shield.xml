<ruleset name="Hotspot Shield (buggy)" default_off="breaks www.hsselite.com/sign-in">

	<target host="hotspotshield.com"/>
	<target host="hsselite.com"/>
	<target host="*.hsselite.com"/>


	<!--securecookie host="^\.hsselite\.com$" name="^PHPSESSID$" /-->


	<rule from="^http://(www\.)?h(otspotshield|sselite)\.com/"
		to="https://$1h$2.com/"/>

	<rule from="^http://cdn\.hsselite\.com/"
		to="https://cdn.hsselite.com/" />

</ruleset>