<!--
     iway.ch

     Known broken domains:
       - netbackup.iway.ch
       - statistik.iway.ch
-->

<ruleset name="iway.ch">
    <target host="iway.ch" />
    <target host="www.iway.ch" />

    <target host="antispam.iway.ch" />
    <target host="ems.iway.ch" />
    <target host="mailadmin.iway.ch" />
    <target host="phone.iway.ch" />
    <target host="power.iway.ch" />
    <target host="tickets.iway.ch" />
    <target host="voip.iway.ch" />
    <target host="webmail.iway.ch" />

    <rule from="^https?://iway\.ch/"
        to="https://www.iway.ch/"/>
    <rule from="^http://([^/:@]+)?\.iway\.ch/"
        to="https://$1.iway.ch/" />
</ruleset>
