<ruleset name="Discovery Communications (partial)">

	<target host="store.discovery.com" />
	<target host="securestore.discovery.com" />


	<!--	//store.: Akamai	-->
	<rule from="^https?://(?:secure)?store\.discovery\.com/"
		to="https://securestore.discovery.com/" />

</ruleset>
