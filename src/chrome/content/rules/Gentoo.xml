<ruleset name="Gentoo (partial)" platform="cacert">

	<target host="*.gentoo.org"/>
		<!--	git.overlays & sidebar are handled in Gentoo-mismatches.xml.	-->
	<exclusion pattern="^http://(anoncvs|archives|bouncer|devmanual|foundation|git\.overlays|packages|sidebar|sources|torrent|www)\." />
	<target host="*.bugs.gentoo.org" />
	<!--	* for cross-domain cookie.	-->
	<target host="*.forums.gentoo.org"/>
	<target host="overlays.gentoo.org"/>
	<target host="piwik.gentoo.org"/>
	<target host="wiki.gentoo.org"/>

  	<!--	Considered but not included:
		devmanual.gentoo.org
		anoncvs.gentoo.org
		store.gentoo.org
		packages.gentoo.org 
	-->

	<rule from="^http://(bugs|dev|forums|overlays|piwik|wiki)\.gentoo\.org/"
		to="https://$1.gentoo.org/"/>

	<securecookie host="^(\.forums|bugs|overlays)\.gentoo\.org$" name=".*"/>

</ruleset>
