<ruleset name="Gentoo" match_rule="http://.*\.gentoo\.org">
  <target host="bugs.gentoo.org" />
  <target host="forums.gentoo.org" />
  <target host="wiki.gentoo.org" />

  <!-- Considered but not included:
         devmanual.gentoo.org
         anoncvs.gentoo.org
         store.gentoo.org
         packages.gentoo.org 
   -->

  <rule from="^http://bugs\.gentoo\.org/" to="https://bugs.gentoo.org/"/>
  <rule from="^http://forums\.gentoo\.org/" to="https://forums.gentoo.org/"/>
  <rule from="^http://wiki\.gentoo\.org/" to="https://wiki.gentoo.org/"/>
</ruleset>
