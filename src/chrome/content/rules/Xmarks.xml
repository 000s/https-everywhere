<!--
	Nonfunctional subdomains:

		- blog *

	* Blogger


	Fully covered subdomains:

		- (www.)?
		- buy
		- download
		- login
		- my
		- static
		- thumbs

-->
<ruleset name="Xmarks (partial)">

	<target host="xmarks.com"/>
	<target host="*.xmarks.com"/>

	<securecookie host="^(?:.*\.)?xmarks.com$" name=".*"/>

	<rule from="^http://((?:buy|download|login|my|static|thumbs|www)\.)?xmarks\.com/"
		to="https://$1xmarks.com/"/>

</ruleset>
