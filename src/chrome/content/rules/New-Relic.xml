	<target host="*.newrelic.com" />


	<securecookie host="^(?:.*\.)?newrelic\.com$" name=".+" />


	<rule from="^http://blog-assets\.newrelic\.com/"
		to="https://blog.newrelic.com/" />

	<!--	Encountered subdomains:

