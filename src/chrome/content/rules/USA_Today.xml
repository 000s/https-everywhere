	<rule from="^http://onlinestore\.usatoday\.com/Net/"
		to="https://www.nexternal.com/Net/" />

	<rule from="^http://(service|videos)\.usatoday\.com/"
		to="https://$1.usatoday.com/" />

</ruleset>
