<!--
	For rules not causing false/broken MCB, see Yahoo.xml.

-->
<ruleset name="Yahoo.com (false MCB)" platform="mixedcontent">

	<target host="*.advertising.yahoo.com" />
	<target host="ar.yahoo.com" />
	<target host="*.ar.yahoo.com" />
	<target host="tw.partner.buy.yahoo.com" />
	<target host="au.gwn7.yahoo.com" />
	<target host="ca.autos.yahoo.com" />
	<target host="info.yahoo.com" />
	<target host="au.rss.news.yahoo.com" />
	<target host="au.prime7.yahoo.com" />
	<target host="tw.uwant.yahoo.com" />


	<securecookie host="^(?:\.ar|tw\.uwant)\.yahoo\.com$" name=".+" />


	<rule from="^http://((?:nz|au)\.advertising|ar|tw\.partner\.buy|au\.gwn7|ca\.autos|info|au\.rss\.news|au\.prime7|tw\.uwant)\.yahoo\.com/"
		to="https://$1.yahoo.com/" />

</ruleset>
