<!--
	For rules not causing false/broken MCB, see Yahoo.xml.

-->
<ruleset name="Yahoo.com (false MCB)" platform="mixedcontent">

	<target host="*.advertising.yahoo.com" />
	<target host="ar.yahoo.com" />
	<target host="*.ar.yahoo.com" />
	<target host="au.gwn7.yahoo.com" />
	<target host="info.yahoo.com" />
	<target host="*.news.yahoo.com" />
	<target host="au.prime7.yahoo.com" />


	<securecookie host="^\.ar\.yahoo\.com$" name=".+" />


	<rule from="^http://((?:nz|au)\.advertising|ar|au\.gwn7|info|(?:nz|au\.rss)\.news|au\.prime7)\.yahoo\.com/"
		to="https://$1.yahoo.com/" />

</ruleset>
