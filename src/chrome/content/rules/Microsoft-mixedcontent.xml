	<target host="blogs.msdn.com" />
	<!--    https://trac.torproject.org/projects/tor/ticket/5754    -->
	<exclusion pattern="^https?://blogs\.msdn\.com/.*\?Redirected=true" />		
	
	<!--	Attempted workaround for

		https://trac.torproject.org/projects/tor/ticket/5754
				-->
