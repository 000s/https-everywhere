	For problematic rules, see Canonical-mismatches.xml.


-->
<ruleset name="Canonical (partial)">

	<target host="blog.bazaar.canonical.com"/>
	<target host="www.blog.bazaar.canonical.com"/>
	<target host="*.canonical.com"/>


	<securecookie host="^shop\.canonical\.com$" name=".*" />


	<rule from="^http://(www\.)?blog\.bazaar\.canonical\.com/"
		to="https://blog.bazaar.canonical.com/"/>

	<rule from="^http://(design|shop)\.canonical\.com/"
		to="https://$1.canonical.com/"/>

</ruleset>
