<ruleset name="Pinterest">

	<target host="*.pinimg.com" />
	<target host="pinterest.com" />
	<target host="*.pinterest.com" />


	<securecookie host="^(.*\.)?pinterest\.com$" name=".*" />


	<rule from="^http://s-([\w\-]+)-ec\.pinimg\.com/"
		to="https://s-$1-ec.pinimg.com/" />

	<rule from="^https?://media-cache-ec\d\.pin(?:img|terest)\.com/"
		to="https://s-media-cache-ec.pinimg.com/" />

	<rule from="^http://(assets\.|www\.)?pinterest\.com/"
		to="https://$1pinterest.com/" />

	<rule from="^http://(?:(media)-cache\d?|(passets)-cdn)\.pinterest\.com/"
		to="https://a248.e.akamai.net/s3.amazonaws.com/$1$2.pinterest.com/" />

	<!--	- passets: EdgeCast
		- pinit-cdn: Akamai
			-->
	<rule from="^https?://p(?:assets|init-cdn)\.pinterest\.com/"
		to="https://a248.e.akamai.net/passets.pinterest.com.s3.amazonaws.com/" />

</ruleset>
