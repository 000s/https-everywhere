<!--
No mixedcontent: amap.xml
-->

<ruleset name="amap-mixedcontent">

	<!--Complication-->

	<target host="ditu.amap.com" />
		<rule from="^http://ditu\.amap\.com/(favicon\.ico|assets|build|service)/" to="https://ditu.amap.com/$1" />
		<test url="http://ditu.amap.com/favicon.ico/" />
		<test url="http://ditu.amap.com/assets/img/loc_fail.png" />
		<test url="http://ditu.amap.com/build/0.e0222ed2cbe4dd89c96c.js" />
		<test url="http://ditu.amap.com/service/checklogin?" />

	<target host="lbs.amap.com" />
		<rule from="^http://lbs\.amap\.com/(console|Public|wp-content)/" to="https://lbs.amap.com/$1" />
		<test url="http://lbs.amap.com/wp-content/themes/apiwebsite/css/extra.min.css" />
		<test url="http://lbs.amap.com/console/public/fancybox/source/jquery.fancybox.js" />
		<test url="http://lbs.amap.com/Public/images/favicon.ico" />

	<target host="m.amap.com" />
		<rule from="^http://m\.amap\.com/navi/" to="https://m.amap.com/navi/" />
		<test url="http://m.amap.com/navi/" />

</ruleset>
