<!--
	Nonfunctional:

		- cs\d*.userapi.com

-->
<ruleset name="VK (partial)">

	<target host="userapi.com" />
	<target host="*.userapi.com" />
	<target host="vk.com" />
	<target host="*.vk.com" />


	<securecookie host="^.*\.vk\.com$" name=".*" />


	<!--	Cert doesn't match userapi	-->
	<rule from="^http://st0\.userapi\.com/"
		to="https://vk.com/" />

	<!--	Cert: *.vk.com	-->
	<rule from="^https?://(?:www\.)?userapi\.com/"
		to="https://vk.com/" />

	<rule from="^http://www\.vk\.com/"
		to="https://www.vk.com/" />

	<rule from="^http://vk\.com/(images/|login\.php)"
		to="https://vk.com/$1" />

	<rule from="^http://login\.vk\.com/"
		to="https://login.vk.com/" />

</ruleset>
