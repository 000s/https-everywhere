<!--
Mismatch:
https://www2.cp.pt/
https://www1.cp.pt/
https://ns0.cp.pt/

Redirect:
http://venda.cp.pt

Invalid cert:
https://cloud.cp.pt/

Timeout:
https://sites.cp.pt/
http://amf.cp.pt/

You should add:
https://cpkids.cp.pt/
https://portal.cp.pt/
https://webmail.cp.pt/
-->

<ruleset name="Cp.pt">
  <target host="cp.pt" />
  <target host="www.cp.pt" />
  <target host="cpkids.cp.pt" />
  <target host="portal.cp.pt" />
  <target host="webmail.cp.pt" />
  <exclusion pattern="http://www2.cp.pt/" />
          <test url="http://www2.cp.pt/" />
  <exclusion pattern="http://www1.cp.pt/" />
          <test url="http://www1.cp.pt/" />
  <exclusion pattern="^http://(www\.)?ns0.cp.pt/" />
         <test url="http://www.ns0.cp.pt/" />
         <test url="http://ns0.cp.pt/" />
  <exclusion pattern="^http://(www\.)?cloud.cp.pt/" />
         <test url="http://www.cloud.cp.pt/" />
         <test url="http://cloud.cp.pt/" />
  <exclusion pattern="^http://(www\.)?sites.cp.pt/" />
         <test url="http://www.sites.cp.pt/" />
         <test url="http://sites.cp.pt/" />
  <exclusion pattern="^http://(www\.)?amf.cp.pt/" />
         <test url="http://www.amf.cp.pt/" />
         <test url="http://amf.cp.pt/" />
  
  <rule from="^http://venda.cp\.pt/" to="https://www.cp.pt/passageiros/pt/comprar-bilhetes/" />
  <rule from="^http://cp\.pt/" to="https://www.cp.pt/" />
  <rule from="^http:" to="https:" />
</ruleset>
