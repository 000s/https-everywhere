<!--
	Fully covered subdomains:

		- (www.)
		- forms
		- www.kb

-->
<ruleset name="CERT">

	<target host="cert.org" />
	<target host="*.cert.org" />
	<target host="www.kb.cert.org" />


	<securecookie host="^(.+\.)?cert\.org$" name=".*" />


	<!--	//kb.cert.org doesn't exist.	-->
	<rule from="^http://(forms\.|www\.(?:kb\.)?)?cert\.org/"
		to="https://$1cert.org/" />

</ruleset>
