<ruleset name="AdRiver">

	<target host="adriver.ru" />
	<target host="*.adriver.ru" />


	<!--	Set by ad:
				-->
	<securecookie host="^\.adriver\.ru$" name="^[cu]id$" />


	<!--	Cert only matches *.adriver.ru.
						-->
	<rule from="^https?://(?:www\.)?adriver\.ru/"
		to="https://www.adriver.ru/" />

	<!--	Included on 3rd-party websites.
						-->
	<rule from="^http://ad\.adriver\.ru/"
		to="https://ad.adriver.ru/" />

</ruleset>
