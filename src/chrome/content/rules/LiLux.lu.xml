<!--
	Linux User Group Luxembourg


	Fully covered subdomains:

		- (www.)
		- lists
		- mail

-->
<ruleset name="LiLux.lu">

	<target host="lilux.lu" />
	<target host="*.lilux.lu" />


	<securecookie host="^(?:mail|www)\.lilux\.lu$" name=".+" />


	<rule from="^http://((?:lists|mail|www)\.)?lilux\.lu/"
		to="https://$1lilux.lu/" />

</ruleset>