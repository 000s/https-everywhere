<!--
	Problematic subdomains:

		- ^ ¹
		- www.blog ¹
		- www ²

	¹ Mismatched
	² CAcert

-->
<ruleset name="jolexa.net (partial)" platform="cacert">

	<target host="jolexa.net"/>
	<target host="*.jolexa.net"/>

		<test url="http://blog.jolexa.net/" />
		<test url="http://www.blog.jolexa.net/" />

	<securecookie host="^(?:.*\.)?jolexa\.net$" name=".*"/>

	<rule from="^http://(?:www\.)?jolexa\.net/"
		to="https://www.jolexa.net/"/>

	<rule from="^http://(?:www\.)?blog\.jolexa\.net/"
		to="https://blog.jolexa.net/"/>

	<rule from="^http://(\w+\.)?jolexa\.net/"
		to="https://$1jolexa.net/"/>

</ruleset>
