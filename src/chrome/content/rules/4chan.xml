<ruleset name="4chan" default_off="Certificate mismatch">

  <target host="images.4chan.org" />
  <target host="static.4chan.org" />
  <target host="thumbs.4chan.org" />
  <target host="*.thumbs.4chan.org" />

  <rule from="^http://(images|static|thumbs)\.4chan\.org/"
          to="https://$1.4chan.org/" />

  <rule from="^http://(.+?\.)thumbs\.4chan\.org/"
          to="https://$1thumbs.4chan.org/" />

</ruleset>
