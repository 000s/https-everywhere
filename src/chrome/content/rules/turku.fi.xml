<ruleset name="Turku.fi" default_off="buggy">
<!--
	Problematic links:
	-	turku.fi/bussar
	-	turku.fi/busses
	-	turku.fi/bussit
	-	turku.fi/paikalla
	-	turku.fi/paplats
	-	turku.fi/ippe
	-	turku.fi/nuorikulttuuri
	-	turku.fi/ahtela
	and probably many more...
-->
	<target host="www.turku.fi" />
	<target host="turku.fi" />

	<rule from="^http://(www\.)?turku\.fi/" to="https://www.turku.fi/"/>
	<rule from="^https://turku\.fi/" to="https://www.turku.fi/"/>

	<securecookie host="^\.(www)?\.?turku\.fi" name=".*" />
</ruleset>
