<!--
	s3.amazonaws.com/i.huffpost.com/	-	not directly equivalent to i.huffingtonpost.com

	!functional subdomains:
		- entry-stats
		- s		(redirects to i; prints Amazon Web Services "Access Denied")
-->
<ruleset name="Huffington Post (partial)" default_off="Akamai certificate">

	<target host="i.huffpost.com" />

	<rule from="^http://i\.huffpost\.com/"
		to="https://i.huffpost.com/" />

</ruleset>
