<ruleset name="cleverbridge (partial)">

	<target host="cleverbridge.org"/>
	<target host="*.cleverbridge.org"/>
		<exclusion pattern="^http://(events|saas)\."/>

	<securecookie host="^(.*\.)cleverbridge\.org$" name=".*"/>

	<rule from="^http://(\w+)\.cleverbridge\.org/"
		to="https://$1.cleverbridge.org/"/>

</ruleset>
