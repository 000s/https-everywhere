<!--
    Nonfunctional subdomains:
        - origin.thumbnails -> wrong domain
        - support           -> wrong domain
        - blog              -> redirects to HTTP
        - labs              -> times out

    Fully covered subdomains:

        - $
        - api
        - directory
        - domainreport
        - freeapi
        - img
        - marketplace
        - research
        - reverseip
        - reversens
        - reversewhois
        - secure
        - source
        - support
        - whois 
        - www
-->
<ruleset name="DomainTools">
    <target host="http://domaintools.com" />
    <target host="http://api.domaintools.com" />
    <target host="http://directory.domaintools.com" />
    <target host="http://domainreport.domaintools.com" />
    <target host="http://freeapi.domaintools.com" />
    <target host="http://img.domaintools.com" />
    <target host="http://marketplace.domaintools.com" />
    <target host="http://origin.img.domaintools.com" />
    <target host="http://research.domaintools.com" />
    <target host="http://reverseip.domaintools.com" />
    <target host="http://reversens.domaintools.com" />
    <target host="http://reversewhois.domaintools.com" />
    <target host="http://secure.domaintools.com" />
    <target host="http://source.domaintools.com" />
    <target host="http://support.domaintools.com" />
    <target host="http://thumbnails.domaintools.com" />
    <target host="http://whois.domaintools.com" />

    <securecookie host="^(api\.|directory\.|domainreport\.|freeapi\.|img\.|marketplace\.|research\.|reverseip\.|reversens\.|reversewhois\.|secure\.|source\.|support\.|whois\.|www\.)domaintools\.com$" name=".+" />
    
    <rule from="^http:"
            to="https:" />
</ruleset>
