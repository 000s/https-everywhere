<ruleset name="New Zealand Herald (partial)">

	<target host="*.nzherald.co.nz" />


	<securecookie host="^.+\.nzherald\.co\.nz$" name=".+" />


	<rule from="^http://(newspix|subscriptions)\.nzherald\.co\.nz/"
		to="https://$1.nzherald.co.nz/" />

</ruleset>