<ruleset name="VisualWebsiteOptimizer">
	<target host="visualwebsiteoptimizer.com" />
	<target host="www.visualwebsiteoptimizer.com" />
	<target host="v2.visualwebsiteoptimizer.com" />

	<securecookie host="^(.*\.)?visualwebsiteoptimizer\.com$" name=".*" />

	<rule from="^http://(?:www\.)?visualwebsiteoptimizer\.com/" to="https://visualwebsiteoptimizer.com/"/>
	<rule from="^http://(v2)\.visualwebsiteoptimizer\.com/"   to="https://$1.visualwebsiteoptimizer.com/"/>
</ruleset>

