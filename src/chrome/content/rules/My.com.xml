<!--
    Nonfunctional subdomains:

        - blog   -> redirects to http

    Mixed content:
        - css on mymail from fonts.googleapis.com *

    * Secured by us

    Other My.com rulesets:
        - Maps.me.xml
-->
<ruleset name="My.com (partial)">
    <target host="my.com" />
    <target host="www.my.com" />
    <target host="mymail.my.com" />
    <target host="press.my.com" />
    <target host="r.my.com" />
    <target host="legal.my.com" />
    <target host="help.my.com" />
    <target host="target.my.com" />

    <securecookie host="^(www\.|mymail\.|press\.|r\.|legal\.|help\.|target\.)?my\.com$" name=".+" />

    <rule from="^http:"
            to="https:" />
</ruleset>
