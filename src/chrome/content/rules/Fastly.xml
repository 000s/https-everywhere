<!--
	Nonfunctional domains:

		- purge.fastly.net	(times out)

-->
<ruleset name="Fastly">
  <target host="*.fastly.net" />
  <target host="www.fastly.net" />
		<exclusion pattern="^http://purge\.fastly\.net/" />

  <rule from="^http://([^@:/]+)?fastly\.net/"  to="https://$1fastly.net/"/>
</ruleset>
