<ruleset name="Adobe">
  <target host="*.adobe.com" />
  <target host="cem.events.adobe.com" />
  <target host="adobe.com" />
  <target host="worldsecuresystems.com"/>

  <target host="fpdownload.macromedia.com" />

  <rule from="^http://(?:www\.)?adobe\.com/"
	to="https://www.adobe.com/"/>
  <rule from="^http://(blogs|cookbooks|edexchange|kuler|cem\.events)\.adobe\.com/"
	to="https://$1.adobe.com/"/>

  <rule from="^http://fpdownload\.macromedia\.com/" to="https://fpdownload.macromedia.com/" />

  <rule from="^http://worldsecuresystems\.com/"
	  to="https://worldsecuresystems.com"/>

  <securecookie host="^(www)?\.?worldsecuresystems\.com" name=".*"/>
</ruleset>
