	<target host="scribd.com"/>
	<target host="*.scribd.com"/>
	<target host="*.scribdassets.com"/>

	<securecookie host="^(.*\.)?scribd\.com$" name=".*"/>

	<rule from="^http://(?:www\.)?scribd\.com/"
		to="https://www.scribd.com/"/>

