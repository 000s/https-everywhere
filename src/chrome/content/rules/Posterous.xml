<ruleset name="Posterous">
  <target host="posterous.com" />
  <target host="*.posterous.com" />

  <securecookie host="^(.+\.)?posterous\.com$" name=".*"/>

  <rule from="^http://(?:www\.)?posterous\.com/" to="https://posterous.com/"/>
  <rule from="^http://([^@:\./]+)\.posterous\.com/" to="https://$1.posterous.com/"/>
</ruleset>
