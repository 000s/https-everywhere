<ruleset name="Linode">
  <target host="linode.com" />
  <target host="*.linode.com" />

  <securecookie host="^.*linode\.com$" name=".*"/>

  <rule from="^http://((?:blog|forum|library|stats|manager|www)\.)?linode\.com/" to="https://$1linode.com/"/>

	<rule from="^http://status\.linode\.com/"
		to="https://linode.statuspage.io/" />
</ruleset>
