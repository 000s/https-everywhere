<!--
	For rules without mixed content, see Travel_Republic.xml.

-->
<ruleset name="Travel Republic (mixedcontent)" default_off="mixedcontent">

	<target host="travelrepublic.com" />
	<target host="www.travelrepublic.com" />
	<target host="travelrepublic.co.uk" />
	<target host="www.travelrepublic.co.uk" />


	<securecookie host="^www\.travelrepublic\.co\.uk$" name=".+" />


	<rule from="^https?://(?:www\.)?travelrepublic\.com/(?:.*)"
		to="https://www.travelrepublic.co.uk/" />

	<rule from="^https?://(?:www\.)?travelrepublic\.co\.uk/(?!favicon\.ico|images[vV]\d/|Include/|stylesheets/)"
		to="https://www.travelrepublic.co.uk/" />

</ruleset>