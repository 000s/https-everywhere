<ruleset name="Walmart.com (partial)">

	<target host="walmart.com" />
	<target host="*.walmart.com" />
		<!--
			Redirect to http:
						-->
		<!--exclusion pattern="^http://(www\.)?walmart\.com/+($|\?)" /-->
