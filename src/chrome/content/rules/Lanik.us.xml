<!--
	For Lanik.us

		Works:

			- forums
			- www
			- $

		Doesn't Work:
		nil
-->
<ruleset name="Lanik.us">
  <target host="lanik.us" />
  <target host="*.lanik.us" />

  <rule from="^http://lanik\.us/"
          to="https://lanik.us/" />

  <rule from="^http://(www|forums)\.lanik\.us/"
          to="https://$1\.lanik.us/" />

  <test url="http://lanik.us/" />
  <test url="http://www.lanik.us/" />
  <test url="http://forums.lanik.us/" />

  <securecookie host="^forums\.lanik\.us$" name=".+" />
  <securecookie host="^\.lanik\.us$" name="^__cfduid$" />
</ruleset>