<ruleset name="Spreadshirt">

	<target host="spreadshirt.com"/>
	<target host="*.spreadshirt.com"/>
	<target host="spreadshirt.co.uk"/>
	<target host="*.spreadshirt.co.uk"/>

	<rule from="^http://spreadshirt\.co(m|\.uk)/"
		to="https://www.spreadshirt.co$1/"/>

	<rule from="^http://(.+)\.spreadshirt\.co(m|\.uk)/"
		to="https://$1.spreadshirt.co$2/"/>

	<securecookie host=".*spreadshirt\.co(m|\.uk)$" name=".*"/>

</ruleset>
