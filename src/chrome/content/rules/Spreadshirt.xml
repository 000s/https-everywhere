<!--
	(www.)? redirects to http
-->
<ruleset name="Spreadshirt">
	<target host="spreadshirt.at" />
	<target host="*.spreadshirt.at" />
	<target host="spreadshirt.be" />
	<target host="*.spreadshirt.be" />
	<target host="spreadshirt.co.uk" />
	<target host="*.spreadshirt.co.uk" />
	<target host="spreadshirt.com" />
	<target host="*.spreadshirt.com" />
	<target host="spreadshirt.de" />
	<target host="*.spreadshirt.de" />
	<target host="spreadshirt.dk" />
	<target host="*.spreadshirt.dk" />
	<target host="spreadshirt.es" />
	<target host="*.spreadshirt.es" />
	<target host="spreadshirt.fi" />
	<target host="*.spreadshirt.fi" />
	<target host="spreadshirt.fr" />
	<target host="*.spreadshirt.fr" />
	<target host="spreadshirt.ie" />
	<target host="*.spreadshirt.ie" />
	<target host="spreadshirt.it" />
	<target host="*.spreadshirt.it" />
	<target host="spreadshirt.net" />
	<target host="*.spreadshirt.net" />
	<target host="spreadshirt.nl" />
	<target host="*.spreadshirt.nl" />
	<target host="spreadshirt.no" />
	<target host="*.spreadshirt.no" />
	<target host="spreadshirt.pl" />
	<target host="*.spreadshirt.pl" />
	<target host="spreadshirt.se" />
	<target host="*.spreadshirt.se" />
	<target host="image.spreadshirtmedia.net" />

	<test url="www.spreadshirt.at" /> 
	<test url="www.spreadshirt.be" /> 
	<test url="www.spreadshirt.co.uk" /> 
	<test url="www.spreadshirt.com" /> 
	<test url="www.spreadshirt.de" /> 
	<test url="www.spreadshirt.dk" /> 
	<test url="www.spreadshirt.es" /> 
	<test url="www.spreadshirt.fi" /> 
	<test url="www.spreadshirt.fr" /> 
	<test url="www.spreadshirt.ie" /> 
	<test url="www.spreadshirt.it" /> 
	<test url="www.spreadshirt.net" /> 
	<test url="www.spreadshirt.nl" /> 
	<test url="www.spreadshirt.no" /> 
	<test url="www.spreadshirt.pl" /> 
	<test url="www.spreadshirt.se" /> 

	<securecookie host="\w+\.spreadshirt\.(at|be|co\.uk|com|de|dk|es|fi|fr|ie|it|net|nl|no|pl|se)$" name=".+" />

	<exclusion pattern="^http://(www\.)?spreadshirt\.(at|be|co\.uk|com|de|dk|es|fi|fr|ie|it|net|nl|no|pl|se)/" />

	<rule from="^http://(\w+)\.spreadshirt\.(at|be|co\.uk|com|de|dk|es|fi|fr|ie|it|net|nl|no|pl|se)/"
		to="https://$1.spreadshirt.$2/" />
	<rule from="^http:"
		to="https:" />
</ruleset>
