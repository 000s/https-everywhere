<!--
	For other Microsoft coverage, see Microsoft.xml.


	CDN buckets:

		- a134.lm.akamai.net

			- akam.bing.com
			- ts[1-4].mm.bing.net

		- ssl.bing.com.edgekey.net

			- ssl.bing.com


	Nonfunctional domains:

		- api.bing.com			(404, akamai)
		- db3.api.bing.com		(404; mismatched, CN: bedrock.msn.com)

	* Redirects to http


	Problematic domains:

		- ts[1-4].mm.bing.net	(akamai)


	Fully covered domains:

		- bing.com subdomains:

			- (www.)
			- c.bing		(tracking beacons)
			- h.bing
			- ssl.bing
			- udc.bing

		- ts[1-4].mm.bing.net

-->
<ruleset name="Bing (partial)">

	<target host="bing.com" />
	<target host="*.bing.com" />
	<target host="*.mm.bing.net" />


	<securecookie host="^(?:\.c|ssl|www)\.bing\.com$" name=".+" />
	<!--
		Could we secure any of these safely?
							-->
	<!--securecookie host="^\.bing\.com$" name="(_HOP|_IDP|MUID|SRCHD|SRCHUSR|_SS)$" /-->


	<rule from="^http://(www\.)?bing\.com/"
		to="https://$1bing.com/" />

	<rule from="^http://(c|h|ssl|udc)\.bing\.com/"
		to="https://$1.bing.com/" />

	<rule from="^http://ts[1-4]\.mm\.bing\.net/"
		to="https://ssl.bing.com/"/>

</ruleset>
