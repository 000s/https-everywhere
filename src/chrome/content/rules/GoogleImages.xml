<ruleset name="Google Images">
  <target host="images.google.com" />
  <target host="www.google.com" />

  <!-- this stanza realy only for ApplicableList purposes -->
  <target host="encrypted.google.com" /> 
  <rule from="^http://encrypted\.google\.com/imghp" 
          to="https://encrypted.google.com/imghp" />

  <!-- https://images.google.com is currently broken; work around that... -->
  <rule from="^https?://images\.google\.com/"
          to="https://encrypted.google.com/imghp" />
  <rule from="^http://(www\.)?google\.com/imghp"
	  to="https://encrypted.google.com/imghp" />
  <rule from="^http://(?:images|www|encrypted)\.google\.com/(.*tbm=isch)"
          to="https://encrypted.google.com/$1" />

  <rule
   from="^http://(?:www\.)?google\.(?:com?\.)?(?:au|ca|gh|ie|in|jm|ke|lk|my|na|ng|nz|pk|rw|sl|sg|ug|uk|za|zw)/imghp$"
     to="https://encrypted.google.com/imghp" />
  <rule
   from="^http://(?:www\.)?google\.(?:com?\.)?(?:ar|bo|cl|co|cu|cr|ec|es|gt|mx|pa|pe|py|sv|uy|ve)/imghp$"
    to="https://encrypted.google.com/imghp?hl=es" />
  <rule
   from="^http://(?:www\.)?google\.(?:com\.)?(?:ae|bh|eg|jo|kw|lb|ly|om|qa|sa)/imghp$"
     to="https://encrypted.google.com/imghp?hl=ar" />
  <rule from="^http://(?:www\.)?google\.(?:at|ch|de)/imghp$"
          to="https://encrypted.google.com/imghp?hl=de" />
  <rule from="^http://(?:www\.)?google\.(fr|nl|it|pl|ru|bg|pt|ro|hr|fi|no)/imghp$"
          to="https://encrypted.google.com/imghp?hl=$1" />
  <rule from="^http://(?:www\.)?google\.com?\.(id|th|tr)/imghp$"
          to="https://encrypted.google.com/imghp?hl=$1" />
  <rule from="^http://(?:www\.)?google\.com\.il/imghp$"
          to="https://encrypted.google.com/imghp?hl=he" />
  <rule from="^http://(?:www\.)?google\.com\.kr/imghp$"
          to="https://encrypted.google.com/imghp?hl=ko" />
  <rule from="^http://(?:www\.)?google\.com\.kz/imghp$"
          to="https://encrypted.google.com/imghp?hl=kk" />
  <rule from="^http://(?:www\.)?google\.com\.jp/imghp$"
          to="https://encrypted.google.com/imghp?hl=ja" />
  <rule from="^http://(?:www\.)?google\.com\.vn/imghp$"
          to="https://encrypted.google.com/imghp?hl=vi" />
  <rule from="^http://(?:www\.)?google\.com\.br/imghp$"
          to="https://encrypted.google.com/imghp?hl=pt-BR" />
  <rule from="^http://(?:www\.)?google\.se/imghp$"
          to="https://encrypted.google.com/imghp?hl=sv" />

</ruleset>
