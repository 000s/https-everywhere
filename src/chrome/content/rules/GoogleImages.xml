<!--
	For other Google coverage, see GoogleServices.xml.


	Problematic domains:

		- www.google.bo *
		- www.google.co *
		- www.google.ec *
		- www.google.in *
		- www.google.kr *
		- www.google.com.kz **
		- www.google.com.lk *
		- www.google.mx **
		- www.google.sg *
		- www.google.sl *
		- www.google.ug *
		- www.google.vn *

	* 404; mismatched, CN: google.com
	** Works; mismatched, CN: google.com

-->
<ruleset name="Google Images">

	<target host="google.*" />
	<target host="www.google.*" />
	<target host="google.co.*" />
	<target host="www.google.co.*" />
	<target host="google.com" />
	<target host="*.google.com" />
	<target host="google.com.*" />
	<target host="www.google.com.*" />


	<rule from="^http://(encrypted|www)\.google\.com/(advanced_image_search|imghp|.*tb(?:m=isch|s=sbi))" 
		to="https://$1.google.com/$2" />

	<rule from="^http://images\.google\.com/"
		to="https://images.google.com/" />

	<!--	First handle problematic domains:
							-->
	<rule from="^http://(?:www\.)?google\.co/(advanced_image_search|imghp)"
		to="https://www.google.com/$1" />

	<rule from="^http://(?:www\.)?google\.(?:co\.)?(in|kr|ug)/(advanced_image_search|imghp)"
		to="https://www.google.$1/$2" />

	<rule from="^http://(?:www\.)?google\.(?:com\.)?(kz|lk)/(advanced_image_search|imghp)"
		to="https://www.google.$1/$2" />

	<rule from="^http://(?:www\.)?google\.(?:com\.)?(bo|ec|mx|sg|sl|vn)/(advanced_image_search|imghp)"
		to="https://www.google.com.$1/$2" />

	<!--	And then the rest:
					-->
	<rule from="^http://(?:www\.)?google\.(com?\.)?(ae|ar|at|au|bg|bh|br|ca|ch|cl|co|cr|cu|de|eg|es|fi|fr|gh|gt|hr|id|ie|il|it|jo|jp|jm|ke|kw|lb|ly|my|na|ng|nl|no|nz|om|pa|pe|pk|pl|pt|py|qa|ro|ru|rw|sa|se|sv|th|tr|uk|uy|ve|za|zw)/(advanced_image_search|imghp)"
		to="https://www.google.$1$2/$3" />

</ruleset>
