<!--
	Not covered here:

		- unwire.dk *
		- editor.portal.unwire.com *
		- unwire.com **

	 * Bad certificate
	** Serves https but style sheets fail to load on "mixedcontent" platforms.
-->
<ruleset name="Unwire">

	<target host="*.unwire.dk" />
	<target host="*.unwire.com" />

	<securecookie host="^portal\.unwire\.dk$" name=".*" />

	<rule from="^http://portal\.unwire\.dk/" to="https://portal.unwire.dk/"/>
	<rule from="^http://image\.unwire\.com/" to="https://image.unwire.com/"/>

</ruleset>
