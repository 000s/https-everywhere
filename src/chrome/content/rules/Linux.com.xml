<ruleset name="Linux.com">

	<target host="linux.com" />
	<target host="*.linux.com" />


	<securecookie host="^video\.linux\.com$" name=".*" />


	<rule from="^http://(?:www\.)?linux\.com/"
		to="https://www.linux.com/" />

	<rule from="^http://(store|video)\.linux\.com/"
		to="https://$1.linux.com/" />

</ruleset>
