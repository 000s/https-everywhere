<!--
	Problematic subdomains:

		- paste ¹
		- www ¹²

	¹ Shows b.ngx.cc
	² Mismatched, CN: b.ngx.cc
-->
<ruleset name="Ngx.cc">

	<target host="ngx.cc" />
	<target host="b.ngx.cc" />
	<target host="bot.ngx.cc" />
	<target host="i.ngx.cc" />
	<target host="ip.ngx.cc" />
	<target host="p.ngx.cc" />
	<target host="paste.ngx.cc" />
	<target host="www.ngx.cc" />

	<rule from="^http://paste\.ngx\.cc/"
		to="https://p.ngx.cc/" />

	<rule from="^http://www\.ngx\.cc/"
		to="https://ngx.cc/" />

	<rule from="^http:" to="https:" />

</ruleset>
