<!--
	Nonfunctional:

		- itunes.apple.com	(Akamai; "An error occurred")

-->
<ruleset name="Apple.com (partial)">

	<target host="apple.com" />
	<target host="*.apple.com" />
	<target host="km.support.apple.com" />


	<rule from="^http://(?:www\.)?apple\.com/"
		to="https://www.apple.com/" />

	<rule from="^http://(appleid|application|buyiphone|certifications|connect|daw|developer|devforums|discussions|id|iforgot|itunesconnect|jobs|portal|register|remoteadvisor|selfsolve|support)\.apple\.com/"
		to="https://$1.apple.com/" />

	<rule from="^http://images\.apple\.com/"
		to="https://ssl.apple.com/" />

	<!--	Akamai	-->
	<rule from="^http://km\.support\.apple\.com/"
		to="https://support.apple.com/"/>

</ruleset>
