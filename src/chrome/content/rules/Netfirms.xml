<ruleset name="Netfirms">

	<target host="netfirms.com" />
	<target host="*.netfirms.com" />


	<securecookie host="^\.netfirms\.com$" name=".*" />


	<!--	// & www time out.	-->
	<rule from="^https?://(?:www2?)?netfirms\.com/"
		to="https://www2.netfirms.com/" />

	<rule from="^http://(images|secure)\.netfirms\.com/"
		to="https://$1.netfirms.com/" />

</ruleset>
