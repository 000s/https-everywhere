<!-- slashdot stores most of their stuff here -->
<ruleset name="Geek.net">

	<target host="freecode.com"/>
	<target host="www.freecode.com"/>
	<target host="www.geek.net" />
	<target host="geek.net" />
	<target host="slashdot.net"/>
	<target host="*.slashdot.net"/>

	<rule from="^http://(www\.)?freecode\.com/(avatars|images|screenshots)/"
		to="https://freecode.com/$2/"/>

	<rule from="^http://geek\.net/" to="https://geek.net/"/>
	<rule from="^http://www\.geek\.net/" to="https://geek.net/"/>

	<rule from="^http://(.+\.)?slashdot\.net/favicon\.ico$"
		to="https://tv.slashdot.net/wp-content/themes/TVslashdot/images/favicon.ico"/>

	<rule from="^http://tv\.slashdot\.net/"
		to="https://tv.slashdot.net/"/>

	<securecookie host="^geek\.net$" name=".*"/>

</ruleset>

