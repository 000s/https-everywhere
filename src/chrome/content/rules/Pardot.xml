<!--
	CDN buckets:

		- www-cdn.pardot.netdna-cdn.com
			- www-cdn-pardot.netdna-ssl.com doesn't exist


	pi sets a visitor_id\d{4} tracking cookie on whichever domain it is
	loaded from.

-->
<ruleset name="Pardot">

	<target host="pardot.com"/>
	<!--	www-cdn2: netdna-ssl.com	-->
	<target host="*.pardot.com"/>


	<!--	Tracking cookie set by pi:
						-->
	<securecookie host="^\.pardot\.com$" name="^visitor_id\d{4}$" />
	<securecookie host="^(?:go|pi)\.pardot\.com$" name=".+" />


	<rule from="^http://www-cdn\d\.pardot\.com/"
		to="https://www.pardot.com/"/>

	<rule from="^http://pardot\.com/"
		to="https://pardot.com/"/>

	<rule from="^http://cdn\.pardot\.com/"
		to="https://pi.pardot.com/" />

	<rule from="^http://(blog|go|help|pi|www)\.pardot\.com/"
		to="https://$1.pardot.com/"/>

</ruleset>
