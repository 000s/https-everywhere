<!--
	Problematic domains:

		- www ¹
		- nbviewer ²

	¹: Timeout
	²: Hostname not in cert

	Some content fails to load in mixed content blocking
	browsers. In particular, videos from YouTube are
	obtained over http.
-->
<ruleset name="IPython.org" platform="mixedcontent">

	<target host="ipython.org" />
	<target host="www.ipython.org" />
	
	<rule from="^http://(?:www\.)?ipython\.org/"
		to="https://ipython.org/" />

</ruleset>
