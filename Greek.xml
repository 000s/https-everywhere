<ruleset name="Greek">
  <target host="*.void.gr" />
  <target host="*.skroutz.gr" />
  <target host="*.noc.grnet.gr" />
  <target host="*.e-shop.gr" />
  <target host="*.lifo.gr" />

	<securecookie host="^(.*\.)?void\.gr$" name=".*"/>
	<securecookie host="^(.*\.)?skroutz\.gr$" name=".*"/>
	<securecookie host="^(.*\.)?noc\.grnet\.gr$" name=".*"/>
	<securecookie host="^(.*\.)?e-shop\.gr$" name=".*"/>
	<securecookie host="^(.*\.)?lifo\.gr$" name=".*"/>

  <rule from="^http://(\w+\.)?void\.gr/" to="https://$1void.gr/"/>
  <rule from="^http://(\w+\.)?skroutz\.gr/" to="https://$1skroutz.gr/"/>
  <rule from="^http://(\w+\.)?noc\.grnet\.gr/" to="https://$1noc.grnet.gr/"/>
  <rule from="^http://(\w+\.)?e-shop\.gr/" to="https://$1e-shop.gr/"/>
  <rule from="^http://(\w+\.)?lifo\.gr/" to="https://$1lifo.gr/"/>
</ruleset>
